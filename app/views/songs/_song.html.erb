<h1><%= song.title %></h1>
<h2><%= song.artist %></h2>

<div class="information">
  <dl>
    <% if song.tuning %>
      <dt class="tuning">Tuning</dt>
      <dd class="tuning">
        <%= song.tuning %>
      </dd>
    <% end %>
    <% if song.capo %>
      <dt class="capo">Capo</dt>
      <dd class="capo">
        <%= song.capo %>
      </dd>
    <% end %>
    <% if song.key %>
      <dt class="key">Key</dt>
      <dd class="key">
        <%= song.key %>
      </dd>
    <% end %>
    <% if song.tempo %>
      <dt class="tempo">Tempo</dt>
      <dd class="tempo">
        <%= song.tempo %>
      </dd>
    <% end %>
    <% if song.year %>
      <dt class="year">Year</dt>
      <dd class="year">
        <%= song.year %>
      </dd>
    <% end %>
    <% if song.album %>
      <dt class="album">Album</dt>
      <dd class="album">
        <%= song.album %>
      </dd>
    <% end %>
  </dl>
  <div id="chords">
    <div id="guitar">
      <% song.chords.each do |chord| %>
          <span>
            <%#= guitar_svg chord %>
          </span>
      <% end %>
    </div>
  </div>
</div>
<% song.sections.each do |section| %>
  <div class="section">
    <div class="name">
      <%= section.name %>
    </div>
    <div class="lines">
      <% section.lines.each do|line| %>
        <% if line.tablature? %>
          <div class="tablature">
            <%= line.tablature %>
          </div>
        <% elsif line.comment? %>
          <div class="comment">
            <%= line.comment %>
          </div>
        <% elsif line.measures? %>
          <div class="measures">
            <% line.measures.each do |measure| %>
              <div class="measure">
                <% measure.chords.each do |chord| %>
                  <div class="chord">
                    <%= formatted_chord(chord) %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="line">
            <% line.parts.each do |part| %>
              <div class="part">
                <div class="chord">
                  <%= formatted_chord(part.chord) %>
                </div>
                <div class="lyric">
                  <%= part.lyric %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>