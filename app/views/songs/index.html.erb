<% if notice %>
  <p style="color: green"><%= notice %></p>
<% end %>

<h1>SongPro Songs</h1>

<p class="lead">A collection of songs using the SongPro format</p>

<table class="table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Artist</th>
  </tr>
  </thead>
  <tbody>
  <% @songs.each do |song| %>
    <tr>
      <td><%= link_to song.title, song %></td>
      <td><%= song.artist %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "New Song", new_song_path, class: "btn btn-primary" %>
